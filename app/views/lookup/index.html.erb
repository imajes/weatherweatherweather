<style>
#intro {
  position: fixed;
  object-fit: cover;
  z-index: -1;
  right: 0;
  bottom: 0;
  min-width: 100vh;
  min-height: 100vh;
  height: 100vh;
}

#introContent {
  height: 100vh;
}
</style>

<video autoplay muted loop id="intro">
  <source src="<%= image_path("AdobeStock_197523665.webm") %>" type="video/webm" />
</video>

<div id="introContent" class="bg-image shadow-2-strong">
  <div class="mask d-flex align-items-center h-100" style="background-color: rgba(0, 0, 0, 0.8);">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-xl-5 col-md-8">
          <form class="bg-white rounded-5 shadow-5-strong p-5" method="POST" action="<%= results_path %>">
            <% flash.each do |type, msg| %>
              <div class="alert alert-danger">
                <%= msg %>
              </div>
            <% end %>
            <div class="form-outline mb-4">
              <input type="text" name="address" class="form-control" />
              <label class="form-label" for="address">Enter your address or zip code </label>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Get your forecast</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
